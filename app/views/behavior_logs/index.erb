<h3> Hello, <%= current_user.username %>! Welcome to your children's behavior logs! </h3>

<% @logs.each do |log| %>
    <div class='log'>
        <p>Child's name:         <%=log.child_name%></p>
        <p>Child's age:          <%=log.child_age%></p>
        <p>Behavior:             <%=log.behavior_description%></p>
        <p>Caregiver's response: <%=log.caregiver_response%></p>
        <p><a href="/behavior_logs/<%= log.id %>/edit"> Edit </a></p>
        <form action='/behavior_logs/<%= log.id %>' method='post'>
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete">
        </form>
    </div>
   
<% end %>

<p><a href='/behavior_logs/new'>Add a behavior log </a></p>
<p><a href='/logout'>Logout</a></p>

